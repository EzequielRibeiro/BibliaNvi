<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.projeto.biblianvi.biblianvi.Activity_busca_avancada"
    android:background="#e1e0e0"
    android:gravity="center">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/linearLayout2"
        android:layout_above="@+id/linearLayout8"
        android:gravity="center">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView2"
            android:foregroundGravity="center">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutRadio"
                android:gravity="left">

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="left">
                    <RadioButton android:id="@+id/radio_velho"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Velho Testamento"
                        android:onClick="onRadioButtonClicked"
                        android:textSize="22dp"
                        android:checked="false"
                        android:textColor="#040404" />
                    <RadioButton android:id="@+id/radio_novo"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Novo Testamento"
                        android:onClick="onRadioButtonClicked"
                        android:textSize="22dp"
                        android:textColor="#040404" />
                    <RadioButton android:id="@+id/radio_Biblia"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Toda Bíblia"
                        android:onClick="onRadioButtonClicked"
                        android:textSize="22dp"
                        android:textColor="#040404" />
                </RadioGroup>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Pesquisar somente:"
                    android:id="@+id/textView4"
                    android:textSize="22dp"
                    android:textColor="#000000"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp" />

                <Spinner
                    android:id="@+id/spinnerBuscaAvanc"
                    style="@style/SpinnerAppTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="600dp"

                    android:entries="@array/bibliaLivEp_arrays"
                    android:gravity="left"
                    android:theme="@style/SpinnerItemStyle" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayout9"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_above="@+id/linearLayout8"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextAvanc"
                        android:layout_gravity="center_horizontal"
                        android:maxLines="1"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:inputType="text"
                        android:singleLine="true"
                        android:layout_weight="1.0" />

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/buttonPesquisaAvanc"
                        android:layout_gravity="center_horizontal"
                        android:textSize="25dp"
                        android:background="@android:drawable/ic_menu_search"
                        android:gravity="center_vertical"
                        android:layout_marginRight="20dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:gravity="center|right"

        android:id="@+id/linearLayout8"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/barrinha">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:text="@string/desenvolverdor"
            android:textSize="12dp"
            android:autoText="false"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#c33f3e41"
            android:padding="2dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/barra_livro"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="50dp"
            android:text="Pesquisa Avançada"
            android:singleLine="false"
            android:focusable="false"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#000000" />

    </LinearLayout>

</RelativeLayout>

