<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.projeto.biblianvi.BibliaAberta"
    android:id="@+id/relativeLaytouAberta">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutBase">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

            <TextView
                android:id="@+id/textoAberto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/white"
                android:includeFontPadding="false"
                android:text="nullnullnullnullnullnullnullnullnullnullnullnullnullnullnullnullnullnullnullnullnullnullnullnullnullnullnullnullnullnullnull"
                android:textColor="@color/black"
                android:textColorHighlight="#d0121313" />

            <Button
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/buttonAbrirLivro"
                android:singleLine="true"
                android:textAlignment="center"
                android:textSize="15dp"
                android:padding="0dp"
                android:gravity="center"
                android:background="@mipmap/abrir"
                android:paddingRight="20dp"
                android:visibility="invisible"
                android:layout_gravity="right"
                android:enabled="true"
                android:layout_marginRight="5dp" />

        </FrameLayout>

    </LinearLayout>


</RelativeLayout>
